---
layout: base.liquid
---

<article class="post">
  <div class="header">
    <h1 class="herotype">{{ title }}</h1>

    <ul class="topics">
      {% for tag in topics %}
        <li>{{ tag }}</li>
      {% endfor %}
    </ul>

    {% if date %}
      <p class="post-date">{{ date | date: "%b %Y" | downcase }}</p>
    {% endif %}

    {% if github %}
      <br>
      <a href="{{ github }}" target="_blank">View On Github</a>
    {% endif %}
  </div>

  <div class='content'>{{ content }}</div>


</article>

